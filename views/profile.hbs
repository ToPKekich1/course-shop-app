<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
        <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
        <p>Avatar no</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Your email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input value={{user.name}} name="name" type="text" id="name" class="validate" required>
                <label for="name">Your name</label>
                <span class="helper-text" data-error="Incorrect name"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>