<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#registration">Registration</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
            <p class="alert">{{loginError}}</p>
            {{/if}}
            <h1>Enter the shop</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input name="email" type="email" id="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter the email"></span>
                </div>
                <div class="input-field">
                    <input name="password" type="password" id="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter the password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
                <p><a href="/auth/reset">Forgot password?</a></p>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
        <div id="registration" class="col s6 offset-s3">
            {{#if registerError}}
            <p class="alert">{{registerError}}</p>
            {{/if}}
            <h1>Create account</h1>
            <form action="/auth/register" method="POST" novalidate>
                <div class="input-field">
                    <input name="email" type="email" id="remail" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Enter the email"></span>
                </div>
                <div class="input-field">
                    <input name="password" type="password" id="rpassword" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter the password"></span>
                </div>
                <div class="input-field">
                    <input name="confirm" type="password" id="confirm" class="validate" required>
                    <label for="confirm">Password again</label>
                    <span class="helper-text" data-error="Enter the password"></span>
                </div>
                <div class="input-field">
                    <input name="name" type="text" id="name" class="validate" required>
                    <label for="name">Your name</label>
                    <span class="helper-text" data-error="Enter the name"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>