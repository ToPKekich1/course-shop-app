<h1>Cart</h1>

<div id="card">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Count
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn red btn-small js-remove" data-id="{{_id}}"
                        data-csrf={{@root.csrf}}>Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Price:</strong><span class="price">{{price}}</span></p>
    <form action="/orders" method="post">

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn">Order</button>
    </form>
    {{else}}
    <p>Cart is empty</p>
    {{/if}}
</div>