<h1>Edit the {{course.title}} course</h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}
<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input name="title" type="text" id="title" class="validate" value={{course.title}} required>
        <label for="title">Title</label>
        <span class="helper-text" data-error="Enter course title">
        </span>
    </div>
    <div class="input-field">
        <input name="price" type="number" id="price" class="validate" value={{course.price}} required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter course price">
        </span>
    </div>
    <div class="input-field">
        <input name="img" type="text" id="img" class="validate" value={{course.img}} required>
        <label for="img">Image URL of course logo</label>
        <span class="helper-text" data-error="Enter course image URL">
        </span>
    </div>
    <input type="hidden" name="id" value={{course.id}}>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-primary">Edit</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value={{course.id}}>
    <button class="btn red">Delete</button>
</form>